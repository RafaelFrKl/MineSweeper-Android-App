<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.minesweeper">
    <uses-permission android:name="android.permission.VIBRATE"/>
    <application
        android:icon="@mipmap/ic_launcher_money"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_money_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".HelpScreen"
            android:configChanges="keyboard|orientation|screenSize|keyboardHidden"
            android:screenOrientation="landscape" />
        <activity
            android:name=".OptionsScreen"
            android:configChanges="keyboard|orientation|screenSize|keyboardHidden"
            android:screenOrientation="landscape" />
        <activity
            android:name=".GameScreen"
            android:configChanges="keyboard|orientation|screenSize|keyboardHidden"
            android:screenOrientation="landscape" />
        <activity
            android:name=".MainMenu"
            android:configChanges="keyboard|orientation|screenSize|keyboardHidden"
            android:screenOrientation="landscape" />
        <activity
            android:name=".MainActivity"
            android:configChanges="keyboard|orientation|screenSize|keyboardHidden"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
</manifest>